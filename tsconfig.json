{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "declaration": true,
      "noUnusedLocals": false,
      "sourceMap": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "esnext.asynciterable",
        "es6",
        "es7",
        "dom"
      ],
      "pretty": true
    },
    "exclude": [
      "dist",
      "resources",
      "node_modules"
    ],
    "include": [
      "src/**/*",
      "dataStore/inventory/inventory.json",
      "dataStore/recepies/recipies.json"
    ]
  }